--- 

const {title, content, image: {
    data: {
        attributes: {
            url
        }
}
} } = Astro.props.courseData



---

<section class="curso">

    <div class="contenedor curso-grid">
        <div class="contenido">
            <h2 class="heading">{title}</h2>
            <p class="texto">{content}</p>
        </div>
    </div>
</section>

<style define:vars={{ image: `url(${url})`}} >
.curso {
    padding: 8rem 0;
    margin-top: 10rem;
    background-size: cover;
    background-position: center center;
    background-image: linear-gradient( to right, rgb(0 0 0/ .65), rgb(0 0 0/ .7)), var(--image);
}

@media (min-width: 768px) {
    .curso-grid{
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }

    .curso .contenido {
        grid-column: 2/3;
    }
}

    .curso .texto {
        text-align: center;
        font-size: 2.4rem;
        color: var(--white)
    }

     
</style>